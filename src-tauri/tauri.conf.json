{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "lof-timer",
    "version": "1.0.0",
    "identifier": "cn.m19.lof-timer",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "title": "lof-timer",
                "width": 380,
                "height": 680,
                "resizable": false,
                "decorations": false,
                "transparent": true,
                "visible": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": ["nsis"],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "windows": {
            "nsis": {
                "languages": ["SimpChinese"],
                "installerIcon": "icons/icon.ico"
            }
        }
    }
}
